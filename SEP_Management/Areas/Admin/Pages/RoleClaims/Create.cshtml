@page
@model SEP_Management.Areas.Admin.Pages.RoleClaims.CreateModel

@{
    ViewData["Title"] = "Create Claim";
}

<h1>Create Claim for @Model.Role.Name</h1>

<div class="row">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row col-md-6">
            <div class="form-group ">
                <label asp-for="RoleClaim.ClaimType" class="control-label"></label>
                <input asp-for="RoleClaim.ClaimType" class="form-control" />
                <span asp-validation-for="RoleClaim.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <label asp-for="RoleClaim.ClaimValue" class="control-label"></label>
                <input asp-for="RoleClaim.ClaimValue" class="form-control" />
                <span asp-validation-for="RoleClaim.ClaimValue" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-4">
            <div class="form-group  col-md-6">
                <a class="btn btn-primary" asp-page="Index" asp-route-roleid="@Model.Role.Id">List Claims</a>
            </div>
            <div class="form-group col-md-6">
                <input style="float:right" type="submit" value="Create" class="btn btn-success" />
            </div>
            
        </div>
        
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}