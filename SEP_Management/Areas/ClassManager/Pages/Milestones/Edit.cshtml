<!-- Loader -->
<div id="preloader">
    <div id="status">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>
</div>
<!-- Loader -->
<form class="mt-4" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Title:</label>
                <input asp-for="Milestone.MilestoneName" value="@Model.Milestone.MilestoneName" type="text" class="form-control" />
            </div>
        </div><!--end col-->

        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Start Date:</label>
                <input asp-for="Milestone.StartDate" value="@Model.Milestone.StartDate?.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Due Date:</label>
                <input required="" asp-for="Milestone.DueDate" value="@Model.Milestone.DueDate?.ToString("yyyy-MM-ddTHH:mm")" type="datetime-local" class="form-control">
            </div>
        </div><!--end col-->
        <input type="hidden" asp-for="Milestone.ProjectId" value="@Model.Milestone.ProjectId" />
        <input type="hidden" asp-for="Milestone.MilestoneId" />
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Status:</label>
                <select asp-for="Milestone.IsActive" asp-items="ViewBag.Status" required class="form-select" id="">
                    <option value="" hidden="">Select status:</option>
                </select>
            </div>
        </div><!--end col-->

        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label">Description:</label>
                <textarea asp-for="Milestone.Description" id="comments" rows="4" class="form-control">@Model.Milestone.Description</textarea>
            </div>
        </div>
    </div><!--end row-->

    <div class="row">
        <div class="col-sm-12 col-md-9">
            <a asp-page="Index" name="submit" class="btn btn-primary">Back</a>
        </div><!--end col-->
        <div class="col-sm-12 col-md-3">
            <button style="float:right" type="submit" name="submit" class="btn btn-success">Save changes</button>
        </div>
    </div><!--end row-->
</form>


